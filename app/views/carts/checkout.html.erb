<%= stylesheet_link_tag    "/stylesheets/wide.css", :media => "all" %>

<h3>Checkout</h3><br>



<div id="cartWin">

<ul class="breadcrumb">
  <li><%= link_to_unless @stage == "billing", raw("<span class='badge'>1</span> Billing Address"), checkout_cart_path(@cart, :stage => "billing") %> <span class="divider">/</span></li>
  <li><%= link_to_unless @stage == "shipping" || @cart.billing_address.nil?, raw("<span class='badge'>2</span> Shipping Address"), checkout_cart_path(@cart, :stage => "shipping") %> <span class="divider">/</span></li>
  <li><%= link_to_unless @stage == "shipping_method" || @cart.billing_address.nil? || @cart.shipping_address.nil?, raw("<span class='badge'>3</span> Shipping Method"), checkout_cart_path(@cart, :stage => "shipping_method") %> <span class="divider">/</span></li>
  <li><%= link_to_unless @stage == "review" || @cart.billing_address.nil? || @cart.shipping_address.nil? || !@cart.shipping_confirm?, raw("<span class='badge'>4</span> Review and Pay"), checkout_cart_path(@cart, :stage => "review") %> <span class="divider">/</span></li>
</ul>

<%= render "#{@stage}" %>

</div>