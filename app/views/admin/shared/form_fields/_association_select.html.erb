<div class="control-group">
  <%= f.label column.to_sym, :class => 'control-label' %>
  <div class="controls">
		<%= f.select "#{column}_id".to_sym, column.camelize.constantize.all.collect {|s| [column.camelize.constantize::ASS_SEL_VIEW.collect { |c| "#{s.send(c)}" }.join(' -- '), s.id]}, {} %>
  </div>
</div>