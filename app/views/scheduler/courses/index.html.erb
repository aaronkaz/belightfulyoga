<div class="page-header"><%= content_tag :h1, "Current Courses" %></div>

<ul class="breadcrumb">
	<li><%= link_to "Dashboard", scheduler_root_path %> <span class="divider">/</span></li>
	<li>Current Courses <span class="divider">/</span></li>
</ul>

<ul class="nav nav-tabs">
	<li class="active"><%= link_to raw("<i class='icon-th-list'></i> List"), scheduler_courses_path %></li>
	<li class="active"><%= link_to raw("<i class='icon-th-list'></i> Unscheduled"), unscheduled_scheduler_courses_path %></li>
</ul>

<%= form_tag scheduler_courses_path, :method => 'get', :class => 'form-inline' do %>
	<div class="well">
	    <strong>Filter by:</strong> 
	    &nbsp; Teacher: <%= select_tag :teacher, options_for_select(Teacher.all.collect { |teacher| [teacher.full_name, teacher.id] }, :selected => params[:teacher]), :include_blank => true, :class => "span2" %>
	    &nbsp; Client: <%= select_tag :client, options_for_select(ClientGroup.all.collect { |client| [client.title, client.id] }, :selected => params[:client]), :include_blank => true, :class => "span2" %>
	    &nbsp; Start Date: <%= text_field_tag :start_date, params[:start_date], :class => "datepicker", :style => 'width:75px;' %>
	    &nbsp; End Date: <%= text_field_tag :end_date, end_date, :class => "datepicker", :style => 'width:75px;' %>
	    <hr>
		<%= hidden_field_tag :direction, params[:direction] %>
		<%= hidden_field_tag :sort, params[:sort] %>

		<%#= text_field_tag :search, params[:search], :class => "input-medium search-query", :placeholder => "search" %>
		<%= button_tag raw("<i class='icon-refresh icon-white'></i> Refresh"), :name => nil, :class => "btn btn-primary" %>
		<%= link_to "Reset", scheduler_courses_path, :class => "btn" %>
		</div>	
<% end %>


<%= form_tag scheduler_courses_path, :method => :post, :id => "bulk_action_form" do %>
<%= hidden_field_tag :bulk_action %>

<table class="table table-condensed table-striped">
<thead>
	<tr>
	  <th><%= sortable "courses.id", "ID" %></th>
	  <th><%= sortable "start_date", "Start Date" %></th>
	  <th><%= sortable "end_date", "End Date" %></th>
	  <th><%= sortable "client_groups.title", "Client Group" %></th>
	  <th><%= sortable "admins.id", "Teacher" %></th>
	  <th></th>
	</tr>	
</thead>

<tbody>
    <% @courses.each do |course| %>
    <tr>
        <td><span class="label">ID: <%= course.id %></span> <%= "#{course.default_title}" %></td>
        <td><%= course.start_date.strftime('%m/%d/%Y') %></td>
        <td><%= course.end_date.strftime('%m/%d/%Y') %></td>
        <td><%= course.client_group.title %></td>
        <td><%= content_tag :span, course.teacher.full_name, :class => "label", :style => "background-color:##{course.teacher.color};color:black;" %></td>
        <td nowrap><%= link_to raw("<i class='icon-edit'></i> Schedule"), edit_scheduler_course_path(course), :class => "btn btn-small"%></td>
    </tr>    
    <% end %>
</tbody>    
</table>

<% end %>