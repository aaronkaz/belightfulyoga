<div class="page-header"><%= content_tag :h1, "Unscheduled Courses" %></div>

<ul class="breadcrumb">
	<li><%= link_to "Dashboard", scheduler_root_path %></li>
	<li>Unscheduled Courses</li>
</ul>

<ul class="nav nav-tabs">
	<li class="active"><%= link_to raw("<i class='fa fa-list'></i> List"), unscheduled_scheduler_courses_path %></li>
</ul>

<table class="table table-condensed table-striped">
<thead>
	<tr>
	  <th><%= sortable "start_date", "Start" %></th>
	  <th><%= sortable "end_date", "End" %></th>
	  <th><%= sortable "client_groups.title", "Client Group" %></th>
	  <th><%= sortable "admins.id", "Teacher" %></th>
	  <th>Course</th>
	  <th></th>
	</tr>	
</thead>

<tbody>
	<% @courses.each do |course| %>
	<tr>
		<td><%= course.start_date.strftime('%m/%d/%Y') %></td>
		<td><%= course.end_date.strftime('%m/%d/%Y') %></td>
		<td><%= course.client_group.title %></td>
		<td><%= content_tag :span, course.teacher.full_name, :class => "label", :style => "background-color:##{course.teacher.color};color:black;" %></td>
		<td><span class="label">ID: <%= course.id %></span> <%= "#{course.default_title}" %></td>
		<td nowrap><%= link_to raw("<i class='fa fa-edit'></i> Schedule"), edit_scheduler_course_path(course), :class => "btn btn-sm"%></td>
	</tr>	
	<% end %>
</tbody>	    
	
</table>