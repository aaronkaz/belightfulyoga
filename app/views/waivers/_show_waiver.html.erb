<%= form_for [@cart, @waiver], :html => { class: "form-inline"} do |waiver| %>
<div class="waiver-form" style="width: 943px;">
	
<h1>Belightful Yoga, LLC<br>
Classes/Workshops/Series<br>
<u>Agreement of Release and Waiver of Liability</u>
</h1>

<div class="row">
	<div class="col-md-5"><%= waiver.label :last_name, "Participant Last Name:" %><label class="waiver-value"><%= @waiver.last_name %></label></div>
	<div class="col-md-2"><%= waiver.label :middle_initial, "Middle Initial:" %><label class="waiver-value"><%= @waiver.middle_initial %></label></div>
	<div class="col-md-5"><%= waiver.label :first_name, "First Name:" %><label class="waiver-value"><%= @waiver.first_name %></label></div>	
</div>

<div class="row">
	<div class="col-md-12"><%= waiver.label :address_1, "Address:" %><label class="waiver-value"><%= @waiver.address_1 %></label></div>	
</div>

<div class="row">
	<div class="col-md-5"><%= waiver.label :city, "City:" %><label class="waiver-value"><%= @waiver.city %></label></div>
	<div class="col-md-4"><%= waiver.label :state, "State:" %><label class="waiver-value"><%= @waiver.state %></label></div>
	<div class="col-md-3"><%= waiver.label :postal_code, "Zip:" %><label class="waiver-value"><%= @waiver.postal_code %></label></div>	
</div>

<div class="row">
	<div class="col-md-5"><%= waiver.label :home_phone, "Home Phone:" %><label class="waiver-value"><%= @waiver.home_phone %></label></div>
	<div class="col-md-4"><%= waiver.label :work_phone, "Work Phone:" %><label class="waiver-value"><%= @waiver.work_phone %></label></div>
	<div class="col-md-3"><%= waiver.label :work_phone_ext, "Ext.:" %><label class="waiver-value"><%= @waiver.work_phone_ext %></label></div>	
</div>

<div class="row">
	<div class="col-md-5"><%= waiver.label :cell_phone, "Cell Phone:" %><label class="waiver-value"><%= @waiver.cell_phone %></label></div>
	<div class="col-md-7"><%= waiver.label :birth_date, "Birthdate:" %><label class="waiver-value"><%= @waiver.birth_date.strftime('%m/%d') %></label></div>
</div>

<div class="row">
	<div class="col-md-5"><%= waiver.label :email_address, "Email Address:" %><label class="waiver-value"><%= @waiver.email_address %></label></div>
	<div class="col-md-7"><%= waiver.label :occupation, "Occupation:" %><label class="waiver-value"><%= @waiver.occupation %></label></div>
</div>

<div class="row">
	<div class="col-md-12"><%= waiver.label :emergency_contact, raw("Emergency Contact: <i>(Name, Phone and Relationship) </i>") %>
	<label class="waiver-value"><%= simple_format @waiver.emergency_contact %></label></div>	
</div>

<div class="row">
	<div class="col-md-12"><%= waiver.label :referral, "How did you hear about us?" %><label class="waiver-value"><%= @waiver.referral %></label></div>	
</div>


